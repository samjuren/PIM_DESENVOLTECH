@using PIM_DESENVOLTECH.ViewModels

@model FeriasFuncionarioViewData
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/teste.css">
    <title>Home</title>
</head>

<body>
    <link rel="stylesheet" href="~/css/teste.css">
    <aside class="menu-lateral">
        <header class="header-menu">
            <nav class="nav-menu">
                <form>
                    <button asp-action="CalculoPagamento">
                        <i class="fa-solid fa-calculator"></i>
                        <span>Cálcular Pagamento</span>
                    </button>

                    <button asp-action="FolhaPontoLateral">
                        <i class="fa-solid fa-clock"></i>
                        <span>Regristro de Ponto</span>
                    </button>

                    <button asp-action="FeriasLateral">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <span>Relação de férias</span>
                    </button>

                    <button asp-action="CadastrarFuncionario">
                        <i class="fa-solid fa-plus"></i>
                        <span>Cadastrar funcionário</span>
                    </button>
                    <div class="log-out">
                        <button asp-action="SairSistema">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Sair</span>
                        </button>
                    </div>
                </form>
            </nav>
        </header>
    </aside>


    <main class="dados-content">

        <h2 style="margin-left: 10px">Relção de Férias</h2>
        <table class="table" style="margin-top: 90px;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Código</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Data Inicio</th>
                    <th scope="col">Data Fim</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.feriasList)
                {
                    <tr>
                        <td></td>
                        <td>@item.IdFerias</td>
                        <td>@item.Funcionario.NomeCompleto</td>
                        <td>@item.FeriasInicio.ToString("dd/mm/yyyy")</td>
                        <td>@item.FeriasFim.ToString("dd/mm/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

</body>
</html>

