@model PIM_DESENVOLTECH.Models.Funcionario

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-ojTCEdI5CRDq93DTtPZiGuaQyPp/9h6I5sPVYfGPlcM=" crossorigin="anonymous"></script>
    <title>Descontos</title>
</head>
<html lang="pt-br">
<body>
    <link rel="stylesheet" href="~/css/teste.css">
    <aside class="menu-lateral">
        <header class="header-menu">

            <div class="profile">
                <i class="fa-solid fa-user"></i>
                <span>@Context.Session.GetString("sessaoUsuarioNome")</span>
            </div>

            <nav class="nav-menu">
                <form>
                    <button asp-action="CalculoPagamento">
                        <i class="fa-solid fa-calculator"></i>
                        <span>Cálcular Pagamento</span>
                    </button>

                    <button asp-action="FolhaPontoLateral">
                        <i class="fa-solid fa-clock"></i>
                        <span>Registro de Ponto</span>
                    </button>

                    <button asp-action="FeriasLateral">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <span>Relação de férias</span>
                    </button>

                    <button asp-action="CadastrarFuncionarioLateral">
                        <i class="fa-solid fa-plus"></i>
                        <span>Cadastrar funcionário</span>
                    </button>

                    <div class="log-out">
                        <button asp-action="SairSistema">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Sair</span>
                        </button>
                    </div>
                </form>

            </nav>

        </header>
    </aside>


    
   
    <div class="container mt-4">
        <h1 class="mb-3">Detalhes do Desconto</h1>

        <div class="mb-4">
            <strong>Nome:</strong> @Model.NomeCompleto
            <br />
            <strong>Salário Base:</strong> R$ @Model.Salario.ToString("F2")
        </div>

        <div class="descontos-lista mb-4">
            <h4>Descontos:</h4>
            <ul>
                <li>Valor Descontado do INSS: <span class="text-danger">- R$ @Model.ValorDescontoINSS.ToString("F2")</span></li>
                <li>Valor Descontado do Imposto de Renda: <span class="text-danger">- R$ @Model.ValorDescontoImpostoDeRenda.ToString("F2")</span></li>
                <li>Valor Descontado do Vale Transporte: <span class="text-danger">- R$ @Model.ValorDescontoValeTransporte.ToString("F2")</span></li>
            </ul>
        </div>

        <div class="mb-4">
            <strong>Salário Líquido:</strong> R$ @Model.SalarioLiquido.ToString("F2")
        </div>

        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
   


</body>
 </html>



