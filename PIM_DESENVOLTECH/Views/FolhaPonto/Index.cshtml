@using PIM_DESENVOLTECH.ViewModels

@model FuncionarioViewData

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/teste.css">
    <title>Home</title>
</head>

<body>
    <link rel="stylesheet" href="~/css/teste.css">
    <aside class="menu-lateral">
        <header class="header-menu">

            <div class="profile">
                <i class="fa-solid fa-user"></i>
                <span>@Context.Session.GetString("sessaoUsuarioNome")</span>
            </div>

            <nav class="nav-menu">
                <form>
                    <button asp-action="CalculoPagamento">
                        <i class="fa-solid fa-calculator"></i>
                        <span>Cálcular Pagamento</span>
                    </button>

                    <button asp-action="FolhaPontoLateral">
                        <i class="fa-solid fa-clock"></i>
                        <span>Registro de Ponto</span>
                    </button>

                    <button asp-action="FeriasLateral">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <span>Relação de férias</span>
                    </button>

                    <button asp-action="CadastrarFuncionarioLateral">
                        <i class="fa-solid fa-plus"></i>
                        <span>Cadastrar funcionário</span>
                    </button>

                    <div class="log-out">
                        <button asp-action="SairSistema">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Sair</span>
                        </button>
                    </div>
                </form>

            </nav>

        </header>
    </aside>


    <main class="dados-content">
        <form id="registroForm" asp-action="CadastrarPonto">
            <div style="margin-top: 61px;margin-left: 270px;margin-right: 322px;">
                <input asp-for="folhaPonto.Funcionario.NomeCompleto" class="form-control" type="text" id="nomeFuncionario" name="NomeCompleto" required autocomplete="name" placeholder="Digite o nome do Funcionario">

                <button class="btn btn-success mt-4" style="margin-left: 170px" type="submit">Bater Ponto</button>
            </div>
        </form>

        <table class="table" style="margin-top: 200px;">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Data Ponto</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.folhaPontoList != null)
                {
                    @foreach (var item in Model.folhaPontoList)
                    {
                        <tr>
                            <td></td>
                            <td>@item.Funcionario?.NomeCompleto</td>
                            <td>@item.HoraPonto</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </main>



</body>
</html>